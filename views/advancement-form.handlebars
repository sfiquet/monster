<div class="row">
	<div class="col-12">
		<form action={{postTo}} name="monster" method="post">
			<h2>
				{{#if monster}}
					{{monster}}
				{{else}}
					No monster selected
				{{/if}}
				<input name="q" type="search" placeholder="Search">
				<input type="submit" name="submit" value="Go">
			</h2>
			<p>
				{{#if options}}
					{{options}}
				{{else}}
					{{#if monster}}
						Original
					{{else}}
						No customization
					{{/if}}
				{{/if}}
				<input type="submit" name="submit" value="Customize">
			</p>
		</form>
	</div>
</div>
<div class="row">
	<div class="col-12" id="advance-stats">
		{{#if stats}}
			{{>monster}}
		{{else}}
			<p>Please select a monster</p>
		{{/if}}
	</div>
</div>